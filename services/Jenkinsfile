// Declarative //
pipeline {
    agent any
    environment { 
        AN_ACCESS_KEY = credentials('my-prefined-secret-text') 
    }

    stages {
        stage('Example Build') {
            steps {
                sh "ls -la" 
            }
        }
        stage('Clone repository') { 
            steps { 
                script{
                    checkout scm
                }
                sh "ls -la" 
            }
        }
        stage('Example Test') {
            }
            steps {
                echo 'Hello, JDK'
            }
        }
    }
}

